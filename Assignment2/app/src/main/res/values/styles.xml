<resources>
    <!-- Base application theme. -->
    <style name="Theme.Assignment2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/purple_500</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Define a style for large text views with primary color -->
    <style name="LargePrimaryText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/purple_500</item>
    </style>

    <!-- Define a style for medium text views with primary color -->
    <style name="MediumPrimaryText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/purple_500</item>
    </style>

    <!-- Define a style for medium text views with primary color -->
    <style name="MediumSecondaryText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Define a style for small text views with primary color -->
    <style name="SmallPrimaryText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/purple_500</item>
    </style>

    <!-- Define a style for buttons with primary color background and white text -->
    <style name="PrimaryButton">
        <item name="android:backgroundTint">@color/purple_500</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>